<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppsRepeatProject.HomePage">

    <StackLayout Padding="20" Spacing="20" VerticalOptions="Center" HorizontalOptions="Center">
        <!-- Welcome Label -->
        <Label Text="Welcome to Countdown!" 
               FontSize="Large" 
               HorizontalOptions="Center" 
               VerticalOptions="Center" />

        <!-- Button to start the game -->
        <Button Text="Start Game" 
                Clicked="OnStartGameClicked" 
                BackgroundColor="Orange" 
                TextColor="White"
                VerticalOptions="Center" />

        <!-- Button to go to settings page -->
        <Button Text="Go to Settings" 
                Clicked="OnGoToSettingsClicked" 
                BackgroundColor="Orange" 
                TextColor="White"
                VerticalOptions="Center" />
    </StackLayout>
</ContentPage>
